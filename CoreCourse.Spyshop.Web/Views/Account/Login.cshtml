@model CoreCourse.Spyshop.Web.ViewModels.AccountLoginViewModel
@{
    ViewBag.Title = "Login - Spyshop";
}

<div class="row">
    <div class="col-sm-8">
        <h1>Login</h1>

        <div asp-validation-summary="ModelOnly" class="errordiv"></div>

        <form asp-action="Login">
            <div class="form-group row">
                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" type="checkbox">
                            <label asp-for="RememberMe" style="padding:0;">@Html.DisplayNameFor(m => m.RememberMe)</label>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-4">
        <div class="card bg-light">
            <div class="card-header"><h6>Problems signing in?</h6></div>
            <div class="card-body">
                <p>
                    <i class="fas fa-edit"></i>&nbsp;
                    <a asp-action="Register">Register</a> as a new customer.
                </p>
                <p>
                    <i class="fas fa-unlock-alt"></i>&nbsp;
                    <a asp-action="Reset">Reset your password</a> in case you've forgotten it.
                </p>
            </div>
        </div>
    </div>
</div>
